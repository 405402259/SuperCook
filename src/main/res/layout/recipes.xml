<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="120dp">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbarSize="4dp"
                android:scrollbarStyle="outsideInset"
                android:scrollbarTrackVertical="@color/colorPrimary"
                android:scrollbars="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/ig_recipes"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        />

                    <TextView
                        android:id="@+id/tv_recipe"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:textAlignment="center"
                        android:textSize="30dp" />

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textSize="20dp" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tv_taste"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAlignment="center" />

                        <TextView
                            android:id="@+id/tv_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAlignment="center" />

                        <TextView
                            android:id="@+id/tv_topic"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAlignment="center" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_score"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center" />
                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center" />
                    <TextView
                        android:id="@+id/tv_bang"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="847 個讚"
                        android:textAlignment="center" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="此食譜為幾人份："/>
                        <TextView
                            android:id="@+id/tv_people"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAlignment="center" />
                    </LinearLayout>
                    <EditText
                        android:id="@+id/et_people"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="輸入幾人份"
                        android:inputType="number" />

                    <TextView
                        android:id="@+id/tv_appliance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="所需器具"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/tv_needtool"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                         />

                    <TextView
                        android:id="@+id/tv_ingre"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="所需材料"
                        android:textSize="20dp"
                        android:paddingTop="10dp"/>

                    <TextView
                        android:id="@+id/tv_needfood"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                         />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="作法"
                        android:textSize="20dp"
                        android:paddingTop="10dp"/>


                    <ListView
                        android:id="@+id/tv_way"
                        android:layout_width="match_parent"
                        android:layout_height="300dp" />

                    <TextView
                        android:id="@+id/tv_comment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="評論"
                        android:textSize="20dp"
                        android:paddingTop="10dp"/>

                    <TextView
                        android:id="@+id/tv_critics"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="怪貓: 好吃" />

                </LinearLayout>
            </ScrollView>
        </LinearLayout>



        <LinearLayout
            android:id="@+id/tool"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentBottom="true"
            android:gravity="center">
            <Button
                android:id="@+id/bt_good"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="按讚" />

            <Button
                android:id="@+id/bt_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="評論" />

            <Button
                android:id="@+id/bt_collect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收藏" />

            <Button
                android:id="@+id/bt_report"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="檢舉" />

        </LinearLayout>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>