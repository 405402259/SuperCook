<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="120dp">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbarSize="4dp"
                android:scrollbarStyle="outsideInset"
                android:scrollbarTrackVertical="@color/colorPrimary"
                android:scrollbars="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/ig_recipes"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        app:srcCompat="@drawable/ic_lamb"/>

                    <TextView
                        android:id="@+id/tv_recipe"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="蔥爆羊肉"
                        android:textAlignment="center"
                        android:textSize="30dp" />

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="怪貓"
                        android:textAlignment="center"
                        android:textSize="20dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="難易度："/>
                    <TextView
                        android:id="@+id/tv_score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4.7"
                        android:textAlignment="center" />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="30 分鐘"
                        android:textAlignment="center" />
                    <TextView
                        android:id="@+id/tv_bang"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="847 個讚"
                        android:textAlignment="center" />

                    <EditText
                        android:id="@+id/et_people"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="輸入幾人份"
                        android:inputType="number" />

                    <TextView
                        android:id="@+id/tv_appliance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="所需器具"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/tv_needtool"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="炒鍋,鍋鏟" />

                    <TextView
                        android:id="@+id/tv_ingre"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="所需材料"
                        android:textSize="20dp"
                        android:paddingTop="10dp"/>

                    <TextView
                        android:id="@+id/tv_needfood"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="
羊肉片 1盒,蒜頭 4瓣,麻油 1匙,太白粉 1匙,白胡椒粉 1匙,醬油 1匙,雞湯 0.5碗,米酒 0.5碗,海鹽 0.5匙,七味粉 0.5匙" />

                    <TextView
                        android:id="@+id/tv_way"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="作法"
                        android:textSize="20dp"
                        android:paddingTop="10dp"/>

                    <TextView
                        android:id="@+id/tv_step"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1. 第一次去腥: 羊肉退冰以後, 拌入麻油, 少許醬油, 胡椒和雞高湯, 還有太白粉, 醃個15~20分鐘, 讓肉入味
2. 起熱油鍋, 加入蒜末爆香; 如果是用新鮮辣椒而非七味粉的板友, 就要在這時, 順便把辣椒給爆香
3. 加入之前醃好的羊肉, 大火快速拌炒, 待肉已經有點轉粉紅色 (大概3~5分鐘), 加入米酒和醬油, 用嗆鍋的方式, 增加料理的香氣, 順便第二次去腥; 這時肉已經開始轉咖啡色了, 加入之前切好的蔥段, 撒上七味粉和少許的海鹽提味, 就可以準備上桌囉!!" />


                    <TextView
                        android:id="@+id/tv_comment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="評論"
                        android:textSize="20dp"
                        android:paddingTop="10dp"/>

                    <TextView
                        android:id="@+id/tv_critics"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="怪貓: 好吃" />

                </LinearLayout>
            </ScrollView>
        </LinearLayout>



        <LinearLayout
            android:id="@+id/tool"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentBottom="true"
            android:gravity="center">
            <Button
                android:id="@+id/bt_good"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="按讚" />

            <Button
                android:id="@+id/bt_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="評論" />

            <Button
                android:id="@+id/bt_collect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收藏" />

            <Button
                android:id="@+id/bt_report"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="檢舉" />

        </LinearLayout>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>